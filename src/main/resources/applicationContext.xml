<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- spring提供的读取配置信息的类 -->
	<bean class=
	"org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"></property>
		<property name="ignoreResourceNotFound" value="true"></property>
		<property name="locations">
			<list>
				<value>classpath:/application.properties</value>
			</list>
		</property>
	</bean>
	<!-- LargeObjectHandler，处理二进制字段和大文本字段 -->
	<bean id="lobHandler" class="org.springframework.jdbc.support.lob"></bean>
	<bean id="nativeJdbcExtractor" class=
	"org.springframework.jdbc.support.nativejdbc.CommonsDbcpNativeJdbcExtractor" lazy-init="true"></bean>
	

	<bean id="office" class="com.hwccy.MavenSpring.entity.Office">
		<property name="officeNo" value="000"></property>
	</bean>
	<bean id="car" class="com.hwccy.MavenSpring.entity.Car">
		<property name="price" value="500000"></property>
		<property name="brand" value="Benz"></property>
	</bean>
	<bean id="office2" class="com.hwccy.MavenSpring.entity.Office">
		<property name="officeNo" value="999"></property>
	</bean>
	<bean id="car2" class="com.hwccy.MavenSpring.entity.Car">
		<property name="price" value="1000000"></property>
		<property name="brand" value="GBenz"></property>
	</bean>
	<context:component-scan base-package="com.hwccy.MavenSpring.entity">
		<context:include-filter type="regex" expression="com\.hwccy\..entity"/>
	</context:component-scan>
</beans>